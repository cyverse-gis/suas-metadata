<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="-Infinity" prefWidth="200" fx:controller="controller.analysisView.conditions.DayOfWeekConditionController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="Day of Week Filter" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="5" bottom="5"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <ListView fx:id="dayOfWeekFilterListView"/>
    </center>
    <bottom>
        <FlowPane alignment="CENTER" hgap="5" vgap="10">
            <padding>
                <Insets bottom="10" left="5" right="5" top="10"/>
            </padding>
            <children>
                <Button onAction="#selectAllDays" mnemonicParsing="false" text="Select All"/>
                <Button onAction="#selectNoDays" mnemonicParsing="false" text="Select None"/>
            </children>
        </FlowPane>
    </bottom>
</BorderPane>
