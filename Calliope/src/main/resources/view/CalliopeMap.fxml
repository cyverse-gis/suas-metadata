<?xml version="1.0" encoding="UTF-8"?>

<?import fxmapcontrol.Map?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import java.net.URL?>


<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import org.controlsfx.control.MaskerPane?>
<?import javafx.scene.control.SplitPane?>
<?import library.ImageViewPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<StackPane fx:controller="controller.CalliopeMapController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@CalliopeMap.css"/>
    </stylesheets>
    <children>
        <Map fx:id="map" StackPane.alignment="CENTER" zoomLevel="5" maxZoomLevel="20" center="32.2226, -110.9747"/>
        <VBox fx:id="vbxMapSettings" StackPane.alignment="TOP_LEFT" spacing="5" styleClass="propertiesPanel" maxWidth="200" maxHeight="120" alignment="TOP_LEFT">
            <StackPane.margin>
                <Insets top="15" left="15"/>
            </StackPane.margin>
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <children>
                <ComboBox fx:id="cbxMapProvider" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                <ToggleSwitch fx:id="tswMarkers" selected="true" text="Site Markers" maxWidth="Infinity"/>
                <ToggleSwitch fx:id="tswBoundaries" selected="true" text="Site Boundaries" maxWidth="Infinity"/>
                <ToggleSwitch fx:id="tswImageCounts" selected="true" text="Site Image Counts" maxWidth="Infinity"/>
            </children>
        </VBox>
        <StackPane fx:id="queryPane" StackPane.alignment="BOTTOM_CENTER" maxHeight="100" pickOnBounds="false" opacity="0">
            <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                <padding>
                    <Insets bottom="5" left="5" right="5" top="5"/>
                </padding>
                <items>
                    <HBox alignment="CENTER_LEFT">
                        <VBox fx:id="vbxQuery" spacing="5" alignment="TOP_CENTER">
                            <Label text="Create a Query" VBox.vgrow="NEVER">
                                <font>
                                    <Font size="16"/>
                                </font>
                            </Label>
                            <Label text="Select filters and add them to the query">
                                <font>
                                    <Font size="12"/>
                                </font>
                            </Label>
                            <ListView fx:id="lvwFilters" VBox.vgrow="ALWAYS" onMouseClicked="#clickedFilters"/>
                            <Button onAction="#query" VBox.vgrow="NEVER" text="Perform Query">
                                <font>
                                    <Font size="16"/>
                                </font>
                                <graphic>
                                    <ImageView fitWidth="32" fitHeight="32">
                                        <Image url="@../images/analysisWindow/queryIcon.png"/>
                                    </ImageView>
                                </graphic>
                                <VBox.margin>
                                    <Insets bottom="5"/>
                                </VBox.margin>
                            </Button>
                        </VBox>
                        <ImageViewPane onMouseClicked="#clickedAdd" onMouseEntered="#mouseEnteredArrow" onMouseExited="#mouseExitedArrow">
                            <imageView>
                                <ImageView fx:id="imgArrow" preserveRatio="true">
                                    <Image url="@../images/analysisWindow/arrowDivider.png"/>
                                </ImageView>
                            </imageView>
                        </ImageViewPane>
                        <ListView styleClass="queryConditionsLvw" HBox.hgrow="ALWAYS" fx:id="lvwQueryConditions" orientation="HORIZONTAL"/>
                    </HBox>
                </items>
            </SplitPane>
            <MaskerPane fx:id="mpnQuerying" text="Performing Query..." progressVisible="true"/>
        </StackPane>
        <Button fx:id="btnExpander" styleClass="expanderBtn" onAction="#expandOrRetractFilters" StackPane.alignment="BOTTOM_CENTER" minWidth="64" maxWidth="64" minHeight="64" maxHeight="64">
            <graphic>
                <ImageView>
                    <Image url="@../images/mapWindow/expander64.png"/>
                </ImageView>
            </graphic>
        </Button>
    </children>
</StackPane>
