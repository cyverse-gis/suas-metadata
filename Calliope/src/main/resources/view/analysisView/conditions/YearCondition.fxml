<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="-Infinity" fx:controller="controller.analysisView.conditions.YearConditionController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="Year Filter" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="5" bottom="5"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox spacing="5" alignment="TOP_CENTER">
            <TextField fx:id="txtStartYear" promptText="Start Year" />
            <Label text="up to, and including"/>
            <TextField fx:id="txtEndYear" promptText="End Year"/>
        </VBox>
    </center>
</BorderPane>
